  <RecipeDef>
    <defName>Milira_PrintFeatherThread</defName>
    <label>Print Feather Thread x30</label>
    <description>Print feather threads on the Milira Universal Workbench.</description>
    <jobString>printing feather threads.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
		<li>
		  <filter>
			<categories>
			  <li>Leathers</li>
			  <li>Textiles</li>
			  <li>Wools</li>
			</categories>
		  </filter>
		  <count>50</count>
		</li>
	  </ingredients>
	  <fixedIngredientFilter>
		<categories>
			<li>Leathers</li>
			<li>Textiles</li>
			<li>Wools</li>
		</categories>
		<disallowedThingDefs>
		  <li>Milira_FeatherThread</li>
		  <li>Leather_Human</li>
		  <li>Milira_BloodStainedFeather</li>
		  <li>Milira_Feather</li>
		</disallowedThingDefs>
	  </fixedIngredientFilter>
    <products>
      <Milira_FeatherThread>30</Milira_FeatherThread>
    </products>
	<recipeUsers>
		<li>Milira_UniversalBench</li>
	</recipeUsers>
	<researchPrerequisite>Milira_FeatherThreadPrint</researchPrerequisite>
  </RecipeDef>


  <RecipeDef>
    <defName>Milira_SmeltSunPlateSteel</defName>
    <label>Smelt Solar-Forged Steel x100</label>
