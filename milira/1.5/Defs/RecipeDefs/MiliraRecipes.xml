    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>3600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>90</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Milira_SunPlateSteel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
