<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
    <defName>Milira_MakeSunLightFuel</defName>
    <label>Make solar fuel x10</label>
    <description>Produce solar fuel out of sunlight fruit.</description>
    <jobString>blending solar fuel.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Milira_SunLightFruit</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
		    <li>Milira_SunLightFruit</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Milira_SunLightFuel>10</Milira_SunLightFuel>
    </products>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <researchPrerequisite>Milira_SunLightFuelExtract</researchPrerequisite>
  </RecipeDef>


  <RecipeDef>
