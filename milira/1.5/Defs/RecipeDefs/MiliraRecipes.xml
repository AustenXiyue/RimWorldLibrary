    <jobString>smelting solar-forged steel.</jobString>
    <effectWorking>Milira_SunBlastFurnaceBurning</effectWorking>
		<soundWorking>MiliraRecipe_SunBlastFurnace</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>150</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Milira_SunLightFuel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <products>
      <Milira_SunPlateSteel>100</Milira_SunPlateSteel>
    </products>
	<recipeUsers>
		<li>Milira_SunBlastFurnace</li>
	</recipeUsers>
	<researchPrerequisite>Milira_SunBlastFurnace_Build</researchPrerequisite>
  </RecipeDef>
	


</Defs>