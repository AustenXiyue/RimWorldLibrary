        <points>
          <li>(0, 0)</li>
          <li>(0.1, 0.3)</li>
          <li>(0.2, 0.47)</li>
          <li>(0.3, 0.6)</li>
          <li>(0.4, 0.69)</li>
          <li>(0.5, 0.77)</li>
          <li>(0.6, 0.84)</li>
          <li>(0.7, 0.9)</li>
          <li>(0.8, 0.95)</li>
          <li>(0.9, 0.98)</li>
          <li>(1, 1)</li>
        </points>
      </progressCurve>
    </pawnFlyer>
  </ThingDef>

  <ThingDef ParentName="Milira_PawnJumper">
