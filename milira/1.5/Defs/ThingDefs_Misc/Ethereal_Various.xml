<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="Milira_PawnJumper" ParentName="EtherealThingBase">
    <label>fly</label>
    <defName>Milira_PawnJumper</defName>
    <!-- <thingClass>Milira.MiliraPawnFlyer</thingClass> -->
