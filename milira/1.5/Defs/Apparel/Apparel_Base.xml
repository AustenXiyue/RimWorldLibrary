<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="ApparelBase_Milira" ParentName="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
	  <drawSize>1.0</drawSize>
	  <drawOffset>(0,0,0)</drawOffset>
    </graphicData>
	<drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
      <Beauty>1</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>


<ThingDef Name="Milira_ApparelBase" ParentName="ApparelBase_Milira" Abstract="True">
	<graphicData>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<apparel>
		<useWornGraphicMask>false</useWornGraphicMask>
		<!--<wearPerDay>0.001</wearPerDay>-->
		<tags>
			<li>Royal</li>
			<li>RoyalTier2</li>
			<li>RoyalTier3</li>
			<li>RoyalTier5</li>
			<li>RoyalTier6</li>
			<li>RoyalTier7</li>
		</tags>
	</apparel>
	<tradeability>Sellable</tradeability>
	<tradeTags>
      <li>Apparel</li>
    </tradeTags>
	<statBases>
		<Flammability>0.0</Flammability>
		<DeteriorationRate>1</DeteriorationRate>
		<Beauty>1</Beauty>
	</statBases>
	<recipeMaker>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		<defaultIngredientFilter>
			<categories>
				<li>Root</li>
			</categories>
			<disallowedThingDefs>
				<li>Gold</li>
				<li>Silver</li>
				<li>Plasteel</li>
				<li>Jade</li>
				<li>Uranium</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</recipeMaker>
</ThingDef>




</Defs>