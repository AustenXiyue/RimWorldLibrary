<!--1级衣服-->

<ThingDef ParentName="Milira_ShellBaseII">
	<defName>Milira_Dustcoat</defName>
	<label>Milira dust coat</label>
	<description>A thick coat that provides excellent protection against dust and sand while also offering good warmth.</description>
	<costStuffCount>200</costStuffCount>
	<stuffCategories>
		<li>Leathery</li>
	</stuffCategories>
	<graphicData>
		<texPath>Milira/Apparel/Shell/Dustcoat/Dustcoat</texPath>
	</graphicData>
	<statBases>
		<MaxHitPoints>100</MaxHitPoints>
		<WorkToMake>12000</WorkToMake>
		<ArmorRating_Sharp>0.20</ArmorRating_Sharp>
        <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
        <ArmorRating_Heat>0.30</ArmorRating_Heat>
		<StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.6</StuffEffectMultiplierInsulation_Heat>
	</statBases>
	<apparel>
		<useWornGraphicMask>false</useWornGraphicMask>
		<developmentalStageFilter>Child, Adult</developmentalStageFilter>
		<bodyPartGroups>
		  <li>Torso</li>
          <li>Legs</li>
          <li>Arms</li>
          <li>Neck</li>
          <li>Shoulders</li>
          <li>Feet</li>
          <li>Hands</li>
		  <li>Milira_Wings</li>
		</bodyPartGroups>
		<wornGraphicPath>Milira/Apparel/Shell/Dustcoat/Dustcoat</wornGraphicPath>
		<tags>
			<li>Milira_DailyWear</li>
			<li>Milira_Daily</li>
		</tags>
	</apparel>
	<equippedStatOffsets>
	</equippedStatOffsets>
</ThingDef>


